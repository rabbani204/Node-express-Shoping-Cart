<div class="breadcrumb bg-color-1">
    <div class=" breadcrumb-item active hb-dashboard ">
        <span class="text-dark ml-2">
            <strong>Product List</strong>
        </span>
    </div>
</div>
<div class="container-fluid">
    <table class="table table-striped table-sm bg-color-8 table-bordered table-responsive-sm mt-3">
        <thead>
            <tr>
                <th>User</th>
                <th>Address</th>
                <th>Name</th>
                <th>Payment ID</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{# each products }} {{# each this}}
            <tr>
                <td>{{this.user}}</td>
                <td>{{this.address}}</td>
                <td>{{this.name}}</td>
                <td>{{this.paymentId}}</td>
                <td>
                    <a href="/admin/dashbord/product/{{this.id}}/edit">
                        <i class="fa fa-pencil"></i>
                    </a>
                </td>
                <td>
                    <button data-toggle="modal" value={{this.id}} class="delete" data-target="#myModal">
                        <i class="fa fa-trash-o" aria-hidden="true"> </i>
                    </button>
                </td>

                <td>
                    <a href="/admin/dashbord/subcategory/{{this.id}}/view">
                        <i class="fa fa-eye"></i>
                    </a>
                </td>

                <div class="modal fade" id="myModal" role="dialog">
                    <div class="modal-dialog">

                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title">Confirm Delete</h4>
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                            </div>
                            <div class="modal-header">
                                Are you sure you want to delete the entry?
                            </div>
                            <div class="modal-footer">
                                <a href="" class="btn btn-danger yes">yes</a>
                            </div>
                        </div>

                    </div>
                </div>
            </tr>
            {{/each}} {{/each}}
        </tbody>
    </table>
</div>

<script src="/js/jquery.js"></script>
<script src="/jquery/product.js"></script>