<div class="app flex-row align-items-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h2 style="text-align: center">Product</h2>
                <div class="card mx-4">
                    <div class="card-body p-4">
                        {{#if product.id}}
                        <form method="post" action="/admin/dashbord/product/{{product.id}}" enctype="multipart/form-data">
                            {{else}}
                            <form method="post" action="/admin/dashbord/product" enctype="multipart/form-data">
                                {{/if}}


                                <div class="form-group">
                                    <label for="source">Title</label>
                                    <input type="text" name="title" class="form-control" id="source" value="{{product.title}}" placeholder="Enter Title">
                                </div>

                                <div class="form-group">
                                    <label for="source">English Title</label>
                                    <input type="text" name="titleen" class="form-control" id="source" value="{{product.titleen}}" placeholder="Enter Title">
                                </div>

                                <div class="form-group">
                                    <label for="exampleFormControlSelect1">Select Category</label>
                                    <select class="form-control" name="category" id="exampleFormControlSelect1">
                                        {{# each category }} {{# each this}}
                                        <option>{{this.titleen}}</option>
                                        {{/each}}{{/each}}
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label for="exampleFormControlSelect1">Select Subcategory</label>
                                    <select class="form-control" name="subcategory" id="exampleFormControlSelect1">
                                        {{# each subcategory }} {{# each this}}
                                        <option>{{this.titleen}}</option>
                                        {{/each}}{{/each}}
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label for="source">Image</label>
                                    <input type="file" name="image" class="form-control" id="source" placeholder="Enter Title">
                                </div>

                                <div class="form-group">
                                    <label for="source">Description</label>
                                    <input type="text" name="description" class="form-control" id="source" value="{{product.description}}" placeholder="Enter Description">
                                </div>

                                <div class="form-group">
                                    <label for="source">Price</label>
                                    <input type="text" name="price" class="form-control" id="source" value="{{product.price}}" placeholder="Enter Price">
                                </div>

                                <div class="form-group">
                                    <label for="source">Discount</label>
                                    <input type="text" name="discount" class="form-control" id="source" value="{{product.discount}}" placeholder="Enter Discount">
                                </div>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>