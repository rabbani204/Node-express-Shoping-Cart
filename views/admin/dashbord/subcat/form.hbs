<div class="app flex-row align-items-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h2 style="text-align: center">Subcategory</h2>
                <div class="card mx-4">
                    <div class="card-body p-4">
                        {{#if subcategory.id}}
                        <form method="post" action="/admin/dashbord/subcategory/{{subcategory.id}}">
                            {{else}}
                            <form method="post" action="/admin/dashbord/subcategory">
                                {{/if}}
                                <div class="form-group">
                                    <label for="source">Title</label>
                                    <input type="text" name="title" class="form-control" id="source" value="{{subcategory.title}}" placeholder="Enter Title">
                                </div>
                                <div class="form-group">
                                    <label for="source">English Title</label>
                                    <input type="text" name="titleen" class="form-control" id="source" value="{{subcategory.titleen}}" placeholder="Enter Title In English">
                                </div>

                                <div class="form-group">
                                    <label for="exampleFormControlSelect1">Select Category</label>
                                    <select class="form-control" name="category" id="exampleFormControlSelect1">
                                        {{# each category }} {{# each this}}
                                        <option>{{this.titleen}}</option>
                                        {{/each}}{{/each}}
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label for="target">Description</label>
                                    <input type="text" name="desc" value="{{subcategory.description}}" class="form-control" id="target" aria-describedby="emailHelp"
                                        placeholder="Enter description">
                                </div>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>