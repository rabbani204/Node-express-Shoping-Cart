<div class="app flex-row align-items-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h2 style="text-align: center">Product</h2>
                <div class="card mx-4">
                    <div class="card-body p-4">
                        {{#if product.id}}
                        <form method="post" action="/admin/dashbord/product/{{product.id}}" enctype="multipart/form-data">
                            {{else}}
                            <form method="post" action="/addproduct">
                                {{/if}}


                                <div class="form-group">
                                    <label for="source">Title</label>
                                    <input type="text" name="title" class="form-control" id="source" placeholder="Enter Title">
                                </div>

                                <div class="form-group">
                                    <label for="source">Image Path</label>
                                    <input type="text" name="imagePath" class="form-control" id="source" placeholder="Enter Image Path">
                                </div>

                                <div class="form-group">
                                    <label for="source">Description</label>
                                    <input type="text" name="description" class="form-control" id="source" placeholder="Enter Description">
                                </div>
                                <div class="form-group">
                                    <label for="source">Price</label>
                                    <input type="text" name="price" class="form-control" id="source" placeholder="Enter Price">
                                </div>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>